@model IEnumerable<QuickCode.Models.Plant>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background: url("http://i.imgur.com/2JbMKmd.jpg") no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
</style>
@if (Request.IsAuthenticated)
{
    @*<h2>Plant Information</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>*@

    <div class="container">
        <div class="row" style="margin-bottom: 10px;">
            <div class="col-lg-12">
                <h2>Plants</h2>
                <p>Create a New Record</p>
                <a href="@Url.Action("Create", "Plants")" class="btn btn-primary btn-lg btn-embossed">
                    Add
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-responsive table-bordered table-striped">
                    <thead style="background-color:#16a085; color:#ffffff;">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MixRatePerHour)
                            </th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td style="text-align:center;">
                                    @Html.DisplayFor(modelItem => item.MixRatePerHour)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.PlantID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.PlantID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.PlantID })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                </div>
            </div>
            </div>
        }
